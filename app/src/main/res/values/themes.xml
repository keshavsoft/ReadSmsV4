<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme using Material 3 -->
    <style name="Theme.ReadSmsV2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Map your old colors into M3 roles -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Surfaces -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <!-- Keep your NoActionBar variant (used by activities if any) -->
    <style name="Theme.ReadSmsV2.NoActionBar" parent="Theme.ReadSmsV2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Old overlays updated to M3 -->
    <style name="Theme.ReadSmsV2.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar" />
    <style name="Theme.ReadSmsV2.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- Alias for toolbar overlay used in layouts -->
    <style name="ThemeOverlay.Material3.Toolbar" parent="ThemeOverlay.Material3.ActionBar" />
</resources>
